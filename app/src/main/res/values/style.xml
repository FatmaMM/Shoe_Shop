<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>


    <style name="TextStyle">
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="fontFamily">@font/aladin</item>
    </style>
    <style name="WelcomeTextStyle">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="fontFamily">@font/aladin</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="fontFamily">@font/aladin</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/aladin</item>
        <item name="android:background">@drawable/roundedbutton</item>
    </style>

    <style name="CancelButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="fontFamily">@font/aladin</item>
        <item name="android:background">@drawable/rounded_white_button</item>
        <item name="backgroundTint">@null</item>

    </style>
</resources>